  <style>
    .fixed-pc-card {
      width: 350px;  /* Fixed width */
      height: 550px; /* Fixed height */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin: 20px auto;
      overflow: hidden;
    }

    .fixed-pc-card img {
      width: 100%;
      height: 200px; /* Fixed image height */
      object-fit: cover;
    }

    .fixed-pc-card .accordion {
      flex-grow: 1;
      overflow-y: auto; /* Scroll if content is too long */
    }

    .fixed-pc-card .card-body {
      padding: 10px;
    }

    .fixed-pc-card .card-footer {
      font-size: 0.9rem;
    }

    /* Optional: scrollbar styling */
    .fixed-pc-card .accordion::-webkit-scrollbar {
      width: 6px;
    }
    .fixed-pc-card .accordion::-webkit-scrollbar-thumb {
      background: #ccc;
      border-radius: 3px;
    }
    .collapse {
        text-transform: capitalize  
    }
  </style>
</head>
<body>

<div class="card mb-3 fixed-pc-card">
  <h3 class="card-header" style="text-transform: capitalize;"><%= pc.name %></h3>
  <img src="<%= pc.img_1 %>" alt="">

  <div class="accordion" id="accordion<%= pc.id %>">
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= pc.id %>1">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= pc.id %>1" aria-expanded="true">
          Model
        </button>
      </h2>
      <div id="collapse<%= pc.id %>1" class="accordion-collapse collapse show">
        <div class="accordion-body">
          <strong><%= pc.model %></strong>
        </div>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= pc.id %>2">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= pc.id %>2">
          Processor
        </button>
      </h2>
      <div id="collapse<%= pc.id %>2" class="accordion-collapse collapse">
        <div class="accordion-body">
          <strong><%= pc.processor %></strong>
        </div>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= pc.id %>3">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= pc.id %>3">
          Graphics Card
        </button>
      </h2>
      <div id="collapse<%= pc.id %>3" class="accordion-collapse collapse">
        <div class="accordion-body">
          <strong><%= pc.graphics %></strong>
        </div>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= pc.id %>4">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= pc.id %>4">
          RAM
        </button>
      </h2>
      <div id="collapse<%= pc.id %>4" class="accordion-collapse collapse">
        <div class="accordion-body">
          <strong><%= pc.ram %></strong>
        </div>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= pc.id %>5">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= pc.id %>5">
          Storage
        </button>
      </h2>
      <div id="collapse<%= pc.id %>5" class="accordion-collapse collapse">
        <div class="accordion-body">
          <strong><%= pc.storage %></strong>
        </div>
      </div>
    </div>
  </div>

  <div class="card-body text-center">
    <a href="/laptop/<%= pc.id %>" class="btn btn-primary w-50">More</a>
  </div>

  <div class="card-footer text-muted">
    Last modified: <%= pc.last_modified.toDateString() %>
  </div>
</div>

